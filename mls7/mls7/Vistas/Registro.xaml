        <StackLayout>
            <Label Text="Ventana de Registro" FontSize="23" HorizontalTextAlignment="Center"/>
            <Entry x:Name="txtNombre" Placeholder="Ingrese su nombre"/>
            <Entry x:Name="txtUsuario" Placeholder="Ingrese su usuario"/>
            <Entry x:Name="txtcontrasena" Placeholder="Ingrese su contrase!na"/>
            <Button x:Name="btnIngresar" Text="Insertar Campos" Clicked="btnIngresar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>